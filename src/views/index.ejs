<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: "Home"}) %>
<body>

    <%- include('partials/header') %>

    <main>
        <section class="new">
            <form action="" method="post">
                <input type="text" id="titulo" name="titulo" placeholder="Título">
                <textarea name="mensaje" id="mensaje" cols="30" placeholder="Añade una nota..."></textarea>
                <button type="submit">Crear</button>
            </form>
        </section>
        <section class="list">
            <% for(let i = 0; i < notas.length; i++) {%>
            <div class="note">
                <h2><%= notas[i].titulo %></h2>
                <p><%= notas[i].mensaje %></p>
                <div class="edit">
                    <a href="/notas/<%= notas[i].id %>"><i class="far fa-edit"></i></a>
                    <form action="delete?_method=DELETE" method="POST">
                        <input type="hidden" id="id" name="id" value="<%= notas[i].id %>">
                        <button type="submit" class="delete"><i class="far fa-trash-alt"></i></button>
                    </form>
                </div>
            </div>
            <% } %>
        </section>
    </main>

    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
    <script>
        window.addEventListener('load', function() {
            var elem = document.querySelector('.list');
            var msnry = new Masonry( elem, {
                itemSelector: '.note'
            });
        })
    </script>
</body>
</html>